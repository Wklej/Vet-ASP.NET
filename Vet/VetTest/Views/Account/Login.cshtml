@using VetTest.Models
@model LoginViewModel
@{
    ViewBag.Title = "Zaloguj";
}


<h2 class="text-center">@ViewBag.Title.</h2>

<div class="jumbotron">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "container-regstr", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-row">
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <input type="submit" class="btn btn-primary" style="margin-left: 20px" value="Zaloguj" />
    }
    <p>
        @Html.ActionLink("Nie posiadasz konta? Zarejestruj się jako nowy użytkownik", "Register")
    </p>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
